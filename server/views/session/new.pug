extends ../layouts/application.pug

block content
  .container.mt-4.p-4.border
    h1= t('views.session.new.signIn')
    +formFor()(action=route('session') method='post')
      +input(signInForm, 'email', t('views.users.index.email'))(type="text")
      +input(signInForm, 'password', t('views.users.index.password'))(type="password")
      +submit(signInForm)(value=t('views.session.new.submit'))
