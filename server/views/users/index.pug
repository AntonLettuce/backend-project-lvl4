extends ../layouts/application.pug

block content
  .container.mt-4.h-100
    h1 Список пользователей
    table.table.table-striped
      thead
        tr
          th= t('views.users.index.id')
          th= t('views.users.index.email')
          th= t('views.users.index.firstName')
          th= t('views.users.index.lastName')
      tbody
        each user in users
          tr
            td= user.id
            td= user.email
            td= user.firstName
            td= user.lastName